{
  "name": "root",
  "private": true,
  "description": "Minimal abstract task manager",
  "packageManager": "pnpm@7.13.0",
  "scripts": {
    "bench:createInstance:run": "NX_THIS_IS_A_DISGUSTING_WORKAROUND=true NX_STREAM_OUTPUT=true nx run-many --target=\"bench:createInstance:js\" --projects=\"iocuak-benchmark\"",
    "bench:createInstancesByTag:run": "NX_THIS_IS_A_DISGUSTING_WORKAROUND=true NX_STREAM_OUTPUT=true nx run-many --target=\"bench:createInstancesByTag:js\" --projects=\"iocuak-benchmark\"",
    "build:all": "nx run-many --target=build --all",
    "build:dev:all": "nx run-many --target=build:dev --all",
    "commit": "commit",
    "format": "prettier --write ./packages",
    "lint:all": "nx run-many --target=lint --all",
    "lint:affected": "nx affected --target=lint",
    "prepare": "husky install",
    "prepublish:packages": "pnpm run build:all && pnpm run test:js && pnpm run test:e2e:js",
    "test:coverage": "pnpm run test --coverage",
    "test:e2e": "nx run-many --target=test:e2e --projects=iocuak-e2e",
    "test:e2e:js": "nx run-many --target=test:e2e:js --projects=iocuak-e2e",
    "test:integration": "jest --config=config/jest/jest.config.mjs --selectProjects Integration",
    "test:integration:js": "jest --config=config/jest/jest.js.config.mjs --selectProjects Integration",
    "test:master": "pnpm run test --changedSince=origin/master",
    "test:js": "jest --config=config/jest/jest.js.config.mjs --selectProjects Unit Integration",
    "test:js:ci": "pnpm run test:js --ci",
    "test:js:coverage": "pnpm run test:js --coverage",
    "test:js:ci:coverage": "pnpm run test:js --ci --coverage",
    "test:package:js:ci": "jest --config=config/jest/jest.js.config.mjs --ci",
    "test:package:js:ci:coverage": "pnpm run test:package:js:ci --coverage",
    "test:uncommitted": "pnpm run test --changedSince=HEAD",
    "test:unit": "jest --config=config/jest/jest.config.mjs --selectProjects Unit",
    "test:unit:js": "jest --config=config/jest/jest.js.config.mjs --selectProjects Unit",
    "test": "jest --config=config/jest/jest.config.mjs --selectProjects Unit Integration"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuaklabs/iocuak.git"
  },
  "keywords": [
    "task",
    "manager",
    "typescript"
  ],
  "author": "Cuak McCuackl <cuak.mccuakl@cuaklabs.com>",
  "license": "See license in \"LICENSE\" file",
  "bugs": {
    "url": "https://github.com/cuaklabs/iocuak/issues"
  },
  "homepage": "https://github.com/cuaklabs/iocuak#readme",
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@commitlint/prompt-cli": "17.1.2",
    "@cuaklabs/eslint-config-iocuak": "workspace:./packages/eslint-config-iocuak",
    "@cuaklabs/iocuak-scripts": "workspace:./packages/iocuak-scripts",
    "@cuaklabs/nx-plugin": "0.1.3",
    "@cuaklabs/typescript-config-iocuak": "workspace:./packages/typescript-config-iocuak",
    "@jest/globals": "29.1.2",
    "@nrwl/linter": "14.8.2",
    "@types/node": "18.7.21",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "eslint": "8.24.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "jest-mock": "29.1.2",
    "lint-staged": "13.0.3",
    "nx": "14.8.2",
    "prettier": "2.7.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "sqlite3": "5.1.2",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  }
}
