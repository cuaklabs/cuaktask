{
  "checkers": ["typescript"],
  "coverageAnalysis": "perTest",
  "disableTypeChecks": "packages/*/src/**/*.ts",
  "jest": {
    "configFile": "./config/jest/jest.config.striker.mjs",
    "enableFindRelatedTests": true,
    "projectType": "custom"
  },
  "mutate": [
    "packages/*/src/**/*.ts",
    "!packages/*/src/**/*.spec.ts",
    "!packages/*/src/**/*{Fixtures,Mocks}.ts",
    "!packages/{iocuak-benchmark,iocuak-e2e}/src/**/*.ts"
  ],
  "packageManager": "pnpm",
  "plugins": [
    "@stryker-mutator/jest-runner",
    "@stryker-mutator/typescript-checker"
  ],
  "tempDirName": "stryker-tmp",
  "testRunner": "jest",
  "tsconfigFile": "tsconfig.json"
}
